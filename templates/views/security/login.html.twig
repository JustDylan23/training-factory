{% extends 'content_base.html.twig' %}

{% block content_body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-sm-10 mx-auto">
                <div class="card mt-3">
                    <div class="card-header">
                        <h1 class="text-center">Login</h1>
                    </div>
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey }}</div>
                        {% endif %}
                        <form action="{{ path('app_security_login') }}" method="post" class="panel" autocomplete="off">
                            <div class="form-group">
                                <input type="text" class="form-control" id="email" name="email"
                                       value="{{ last_username }}"
                                       placeholder="E-mail"/>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Password"/>
                            </div>
                            <div class="checkbox">
                                <label><input type="checkbox" name="_remember_me"> Remember me</label>
                            </div>
                            <button class="btn btn-success btn-block" type="submit">Login</button>
                            <a href="#">Forgot password?</a>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}