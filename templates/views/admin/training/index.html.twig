{% extends 'base_crud.html.twig' %}
{% block crud_title %}Training courses{% endblock %}
{% block crud_add_text %}Add training course{% endblock %}
{% block crud_href_add %}{{ path('app_admin_training_add') }}{% endblock %}
{% block crud_href_edit %}{{ path('app_admin_training_edit', {id: entry.id}) }}{% endblock %}
{% block crud_href_delete %}{{ path('app_admin_training_remove', {id: entry.id}) }}{% endblock %}
{% block crud_table_ths %}
    <th>Training</th>
    <th>Duration</th>
    <th>Pricing</th>
{% endblock %}
{% block crud_table_entries %}
    <td>{{ entry.name }}</td>
    <td>{{ entry.duration }} {{ entry.duration == 1 ? 'minute' : 'minutes' }}</td>
    <td>&euro; {{ entry.costs|default('00.00') }}</td>
{% endblock %}
